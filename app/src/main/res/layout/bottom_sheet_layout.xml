<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/BotttomSheetParent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/BotttomSheetContainer">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="6dp"
            android:layout_margin="10dp"
            android:id="@+id/bar"
            android:scaleType="fitXY"
            android:src="@drawable/shape_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            
        </ImageView>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_color_lens_24"
            android:drawablePadding="10dp"
            android:fontFamily="@font/google_sans_regular"
            android:text="@string/choose_color"
            android:id="@+id/add_colour"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bar">

        </com.google.android.material.textview.MaterialTextView>


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_colour">

            <com.thebluealliance.spectrum.SpectrumPalette
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ColourPicker"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:spectrum_autoPadding="true"
                app:spectrum_colors="@array/color_picker"
                app:spectrum_columnCount="16"
                app:spectrum_outlineWidth="0.1dp">

            </com.thebluealliance.spectrum.SpectrumPalette>




        </HorizontalScrollView>








    </androidx.constraintlayout.widget.ConstraintLayout>



</com.google.android.material.card.MaterialCardView>